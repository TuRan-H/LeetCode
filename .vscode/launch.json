{
	"configurations": [
		{
			"name": "debug: CPP",
			"type": "cppdbg",
			"request": "launch",
			"program": "${fileDirname}/${fileBasenameNoExtension}.out",
			"externalConsole": false,
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "compile: CPP",
			"setupCommands": [
				{
					"description": "Enable GDB pretty printing",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
		},
	]
}